<h2 style="color:crimson;">Historial</h2>
<div>
{{#if productos.length}}
    <div class="table-responsive">
        <table class="table table-dark">
            <tr style="color: rgb(131, 216, 114);"> <th>Nombre</th> <th>Precio</th> <th>Imagen</th> </tr>
            {{for }}
            {{#each productos}} 
            <tr>
                <td>{{this.name}}</td>
                <td>{{this.price}}</td>
                <td>
                    <img src="{{this.image}}" style="width: 28px;"></img>
                </td>
            </tr>
            {{/each}}
        </table>
    </div>
{{else}}
    <h3 class="alert alert-danger">no se encontraron datos</h1>
{{/if}}
</div>
<a href="/">
    <button class="btn btn-success mt-3 mb-5">Volver a Ingresar</button>
</a>
